{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2021"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/factory/*": ["src/factory/*"],
      "@/iterator/*": ["src/iterator/*"],
      "@/services/*": ["src/strategy/services/*"],
      "@/external/*": ["src/strategy/services/external/*"]
    }
  },
  "include": ["src/**/*"]
}
